               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <Button layoutX="150.0" layoutY="350.0" mnemonicParsing="false" text="Modify" />
            <Button layoutX="225.0" layoutY="350.0" mnemonicParsing="false" text="Add" />
            <Button layoutX="325.0" layoutY="350.0" mnemonicParsing="false" text="Delete" />
