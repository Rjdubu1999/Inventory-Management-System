      </AnchorPane>
      <AnchorPane layoutX="500.0" layoutY="50.0" prefHeight="400.0" prefWidth="400.0">
         <children>
            <TableView fx:id="MainProductTable" layoutX="25.0" layoutY="50.0" prefHeight="250.0" prefWidth="400.0">
