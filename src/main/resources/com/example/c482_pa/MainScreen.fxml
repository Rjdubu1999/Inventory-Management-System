              </columns>
            </TableView>
            <Button layoutX="325.0" layoutY="350.0" mnemonicParsing="false" text="Delete" />
            <Button layoutX="225.0" layoutY="350.0" mnemonicParsing="false" text="Add" />
            <Button layoutX="150.0" layoutY="350.0" mnemonicParsing="false" text="Modify" />
            <TextField fx:id="MainProductTextField" layoutX="235.0" layoutY="5.0" prefWidth="162.0" promptText="Search By Product ID/Name" />
            <Label layoutX="25.0" layoutY="5.0" text="Products">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
